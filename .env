# ===============================================
# STOCKAGE & UPLOADS (optionnel)
# ===============================================
# Répertoire pour les uploads
UPLOAD_DIR=./uploads

# Taille max des fichiers en MB
MAX_FILE_SIZE=10

# ===============================================
# SAUVEGARDE AUTOMATIQUE (optionnel)
# ===============================================
# Activer les sauvegardes automatiques
AUTO_BACKUP_ENABLED=true

# Fréquence des sauvegardes (en heures)
BACKUP_INTERVAL=24

# Répertoire de sauvegarde
BACKUP_DIR=./backups

# ===============================================
# MONITORING (optionnel)
# ===============================================
# Activer le monitoring des performances
MONITORING_ENABLED=false

# URL webhook pour les alertes
